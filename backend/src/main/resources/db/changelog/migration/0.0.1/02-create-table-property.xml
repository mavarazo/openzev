<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.16.xsd">

    <changeSet author="mav" id="0.0.1-02-1-create-table-units">
        <createTable tableName="OZEV_PROPERTIES">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="PK_OZEV_PROPERTY"/>
            </column>

            <column name="UUID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>

            <column name="ACTIVE" type="BOOLEAN" valueBoolean="TRUE">
                <constraints nullable="false"/>
            </column>

            <column name="STREET" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="HOUSE_NR" type="VARCHAR(55)">
                <constraints nullable="false"/>
            </column>

            <column name="POSTAL_CODE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="CITY" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
